extends layout 

block content 
    .header 
        .row
            .col-sm-1
                a(href="/home") Home
            .col-sm-1 
                a(href="/new_post") New Post 
            .col-sm-2 
                a(href="/new_course") Add a Course
            .col-sm-1
                a(href="/logout") Log Out
    .login-box 
        .header 
            h2 Classmate Search
        form(action="/classmate_search", method = "post")
            .form-group   
                label(for="course") Course Name and Catalog Number
                input(type="text" name="course" class="form-control" placeholder="Example: CS 35L" style="width: 300px;")
            button(type="submit" class="btn btn-primary") Submit


            
            